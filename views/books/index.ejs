<% layout('layouts/boilerplate') %>
    <h2>All My Books</h2>
    <section>
        <% for(let book of books) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= book.image %>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= book.title %>
                            </h5>
                            <p class="card-text">
                                <% for(let comment of book.comments) {%>
                                    <li>
                                        <%= comment %>
                                    </li>
                                    <% } %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= book.author %>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/books/<%= book._id %>">
                                <%= book.title %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </section>
    <button><a href="/">Home</a></button>
    <button><a href="/books/newbook">Add New Book</a></button>