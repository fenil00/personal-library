<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3" >
            <img src="<%= book.image %>" class="card-img-top" width="300" height="300">
            <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Author :<%= book.author %></li>
                <li class="list-group-item">Published Year :<%= book.year %></li>
                <li class="list-group-item">Price : <%= book.price %> $</li>
                <li class="list-group-item">ISBN :<%= book.ISBN %>
                <li class="list-group-item">LastChanged :<%= book.date %></li>
            </ul>
            <div class="card-body">
                <div class="d-flex">
                    <a class="btn btn-warning mb-3" href="/books/<%= book._id %>/edit" class="card-link">Edit Book</a>
                    <form action="/books/<%= book._id %>/?_method=DELETE" method="post">
                        <button class="btn btn-danger ms-3">Delete Book</button>
                    </form>
                </div>
            </div>
            <div class="card-footer">
                <a href="/books" class="card-link">All Books</a>
            </div>
        </div>
    </div>
</div>
